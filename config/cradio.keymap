#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include "../nodefree-config/helper.h"

// Home row mods macro
#define HRML(k1,k2,k3) &ht LALT k1  &ht LCTRL k2  &ht LGUI k3
#define HRMR(k1,k2,k3) &ht RGUI k1  &ht RCTRL k2  &ht RALT k3

// Combo macro
#define COMBO(NAME, BINDINGS, KEYPOS) \
  combo_##NAME { \
    timeout-ms = <50>; \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
  };

/ {
    behaviors {
        ht: hold_tap {
            label = "hold_tap";
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <300>;
            quick-tap-ms = <100>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
    };

    macros {
        macro_sqt: macro_sqt {
            label = "macro_sqt";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp SQT &kp SPACE>
                ;
        };
        macro_a_grave: macro_a_grave {
            label = "macro_a_grave";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp GRAVE &kp A>
                ;
        };
        macro_e_grave: macro_e_grave {
            label = "macro_e_grave";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp GRAVE &kp E>
                ;
        };
        macro_u_grave: macro_u_grave {
            label = "macro_u_grave";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp GRAVE &kp U>
                ;
        };
        macro_o_grave: macro_o_grave {
            label = "macro_o_grave";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp GRAVE &kp O>
                ;
        };
        macro_e_aigu: macro_e_aigu {
            label = "macro_e_aigu";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp RA(E)>
                ;
        };
        macro_e_tre: macro_e_tre {
            label = "macro_e_tre";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp DQT &kp E>
                ;
        };
        macro_i_tre: macro_i_tre {
            label = "macro_i_tre";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp DQT &kp I>
                ;
        };
        macro_e_circ: macro_e_circ {
            label = "macro_e_circ";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CARET &kp E>
                ;
        };
        macro_a_circ: macro_a_circ {
            label = "macro_a_circ";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CARET &kp A>
                ;
        };
        macro_u_circ: macro_u_circ {
            label = "macro_u_circ";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CARET &kp U>
                ;
        };
        macro_o_circ: macro_o_circ {
            label = "macro_o_circ";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp CARET &kp O>
                ;
        };
    };

    combos {
                compatible = "zmk,combos";

                COMBO(ESC, &kp ESC, 0 1)
                COMBO(DEL, &kp DEL, 8 9)
                COMBO(TAB, &kp TAB, 1 2)
                
        };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
            &kp Q      &kp W      &kp F      &kp P         &kp G            &kp J            &kp L      &kp U           &kp Y          &macro_sqt
            &kp A      HRML(R,    S,         T)            &kp D            &kp H            HRMR(N,    E,              I)             &kp O
            &kp Z      &kp X      &kp C      &kp V         &kp B            &kp K            &kp M      &ht SEMI COMMA  &ht MINUS DOT  &kp FSLH
                                             &lt 2 DEL     &kp ENTER        &ht LSHFT SPACE  &lt 1 BSPC
            >;
        };

        right_layer {
            bindings = <
            &kp INS     &kp N7  &kp N8  &kp N9  &kp PLUS       &kp HOME  &kp PG_UP   &kp UP    &kp PG_DN   &none
            &none       &kp N4  &kp N5  &kp N6  &kp MINUS      &kp END   &kp LEFT    &kp DOWN  &kp RIGHT   &none
            &caps_word  &kp N1  &kp N2  &kp N3  &kp N0         &none     &kp C_PREV  &kp C_PP  &kp C_NEXT  &none
                                        &trans  &trans         &trans    &trans
            >;
        };

        left_layer {
            bindings = <
            &none     &kp BSLH  &none     &none     &none         &kp CARET  &kp RPAR   &kp RBKT  &kp RBRC   &kp TILDE
            &kp EXCL  &kp AT    &kp HASH  &kp DLLR  &kp PRCNT     &kp ASTRK  &kp LPAR   &kp LBKT  &kp LBRC   &kp GRAVE
            &none     &none     &none     &none     &none         &kp AMPS   &none      &none     &kp PIPE   &none
                                          &trans    &trans        &trans     &trans
            >;
        };

        tri_layer {
            bindings = <
            &sys_reset   &kp PSCRN  &kp LA(F4)  &none       &bt BT_SEL 0             &kp GRAVE  &kp RA(COMMA)   &none  &macro_o_circ   &macro_i_tre
            &bootloader  &none      &none       &kp LSHFT   &bt BT_SEL 1             &kp A      &macro_e_aigu   &macro_e_grave  &macro_e_circ   &macro_e_te
            &none        &none      &none       &bt BT_CLR  &bt BT_SEL 2             &none      &macro_a_grave  &macro_a_circ   &macro_u_grave  &macro_u_circ
                                                &trans      &trans                   &trans     &trans
            >;
        };
    };
};